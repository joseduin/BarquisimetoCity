<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/material_component_cards_left_and_right_padding"
    android:layout_marginRight="@dimen/material_component_cards_left_and_right_padding"
    android:layout_marginBottom="@dimen/material_component_cards_top_and_bottom_padding"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:id="@+id/lugar_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lugar_titulo"
                android:text="Manto de María"
                android:textSize="@dimen/material_component_cards_primary_title_top_padding"
                android:paddingTop="@dimen/material_component_cards_primary_title_top_padding"
                android:paddingBottom="@dimen/material_component_cards_primary_title_bottom_padding"
                android:paddingLeft="@dimen/material_component_cards_action_button_row_padding"
                android:paddingRight="@dimen/material_component_cards_action_button_row_padding"
                android:textColor="@color/colorBlanco"
                android:background="@color/colorRojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lugar_descripcion"
                android:text="El Monumento Manto de María Divina Pastora es una estructura monumental dedicada a la Virgen María inaugurada el 13 de enero de 2016 en la ciudad de Barquisimeto"
                android:paddingTop="@dimen/material_component_cards_primary_title_bottom_padding"
                android:paddingBottom="@dimen/material_component_cards_primary_title_bottom_padding"
                android:paddingLeft="@dimen/material_component_cards_action_button_row_padding"
                android:paddingRight="@dimen/material_component_cards_action_button_row_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/lugar_imagen"
            app:srcCompat="@drawable/no_image_placeholder"
            android:layout_weight=".6"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>